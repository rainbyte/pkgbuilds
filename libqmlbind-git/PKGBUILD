# Maintainer: Alvaro F. Garc√≠a <alvarofernandogarcia@gmail.com>

_pkgname=libqmlbind
pkgname=$_pkgname-git
pkgver=36588ba
pkgrel=1
pkgdesc="libqmlbind is a C library for creating QML bindings."
arch=('i686' 'x86_64')
license=('GPL')
depends=('qt5-base' 'qt5-declarative')
makedepends=('git')
url="https://github.com/seanchas116/libqmlbind"
options=('!emptydirs')
source=("$_pkgname::git+https://github.com/rainbyte/libqmlbind#branch=master")
sha256sums=('SKIP')

prepare() {
  cd "$srcdir/$_pkgname"
}

pkgver() {
  cd "$srcdir/$_pkgname"
  git describe --always | sed 's|-|.|g'
}

build() {
  cd "$srcdir/$_pkgname/qmlbind"
  qmake-qt5
  make
}

package()  {
  cd "$srcdir/$_pkgname/qmlbind"
  make INSTALL_ROOT="$pkgdir" install
}
